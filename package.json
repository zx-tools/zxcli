{
  "name": "zxcli",
  "version": "1.0.0",
  "description": "ZX Command Line Interface",
  "keywords": [
    "cli"
  ],
  "homepage": "https://github.com/zx-tools/zxcli#readme",
  "bugs": {
    "url": "https://github.com/zx-tools/zxcli/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zx-tools/zxcli.git"
  },
  "license": "MIT",
  "author": "Jamey McElveen",
  "type": "commonjs",
  "main": "dist/index.js",
  "bin": {
    "zx": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run lint:check && npm run test && npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "cross-env ESLINT_USE_FLAT_CONFIG=false eslint src/**/*.ts",
    "lint:fix": "cross-env ESLINT_USE_FLAT_CONFIG=false eslint src/**/*.ts --fix",
    "lint:check": "cross-env ESLINT_USE_FLAT_CONFIG=false eslint src/**/*.ts --max-warnings 0",
    "publish:npm": "npm publish --access public",
    "release": "npm run lint:check && npm run test && npm run clean && npm run build && npm run publish:npm"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "rimraf": "^6.1.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "commander": "^14.0.2"
  }
}
